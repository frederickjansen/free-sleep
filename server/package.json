{
  "name": "server",
  "type": "module",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "dotenv -e .env.pod -- node dist/server.js",
    "build": "tsc",
    "dev": "MODE=dev dotenv -e .env.pod -- nodemon --watch src --ext ts --exec \"node --loader ts-node/esm\" src/server.ts",
    "dev:local": "dotenv -e .env.local -- nodemon --watch src --ext ts --exec \"node --loader ts-node/esm\" src/server.ts",
    "lint": "npx eslint src/ --ext .ts,.tsx",
    "migrate": "bash ../scripts/migrate.sh",
    "migrate:deploy": "bash ../scripts/migrate.sh deploy",
    "migrate:deploy:local": "bash ../scripts/migrate.sh deploy local",
    "migrate:reset": "dotenv -e .env.pod -- npx prisma migrate reset",
    "migrate:direct": "dotenv -e .env.pod -- npx prisma migrate dev --name ",
    "migrate:sync": "bash ../scripts/sync_migrations.sh",
    "migrate:status": "dotenv -e .env.pod -- npx prisma migrate status",
    "migrate:local": "bash ../scripts/migrate.sh",
    "generate": "dotenv -e .env.pod -- npx prisma generate",
    "generate:local": "dotenv -e .env.local -- npx prisma generate",
    "check-db-lock": "bash ../scripts/check_db_lock.sh"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^6.13.0",
    "bree": "^9.2.4",
    "cbor": "^10.0.9",
    "chokidar": "^4.0.3",
    "cors": "^2.8.5",
    "dotenv-cli": "^10.0.0",
    "express": "^5.1.0",
    "lodash": "^4.17.21",
    "lowdb": "^7.0.1",
    "moment-timezone": "^0.6.0",
    "node-schedule": "^2.1.1",
    "ts-essentials": "^10.1.1",
    "winston": "^3.17.0",
    "zod": "^4.0.14"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.3",
    "@types/bun": "latest",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/lodash": "^4.17.20",
    "@types/node": "^24.1.0",
    "@types/node-schedule": "^2.1.8",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^9.32.0",
    "nodemon": "^3.1.10",
    "prisma": "^6.13.0",
    "ts-node": "^10.9.2",
    "typescript": "5.9.2"
  }
}
